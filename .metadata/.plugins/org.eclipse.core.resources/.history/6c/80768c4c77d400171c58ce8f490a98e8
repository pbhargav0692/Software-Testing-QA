package com.maven.selenium.test;

import java.sql.Driver;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

import junit.framework.Assert;

public class EcommerceWebsiteTest {

	public static void main(String[] args) throws Exception implements EcommerceConstant{
		
		WebDriver driver = new FirefoxDriver();
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
		driver.get("http://ecommerce.saipratap.net/customerlogin.php");		
		driver.findElement(By.id("email")).sendKeys("test4@gmail.com");
		driver.findElement(By.id("password")).sendKeys("pwd1");
		driver.findElement(By.linkText("Login")).click();
		Thread.sleep(1000);
		Assert.assertEquals(driver.getTitle(), "Ez Shop Online");
		driver.close();
	}

}
